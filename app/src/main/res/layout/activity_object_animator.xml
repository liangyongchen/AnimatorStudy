<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hema.animatorstudy.ac.ObjectAnimatorActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="alpha"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/rotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="rotation"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/translationX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="translationX"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/translationY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="translationY"
                android:textColor="@color/White" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="scale"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/scaleX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="scaleX"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/scaleY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="scaleY"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/setGroupAnimator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="组合1"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/setGroupAnimator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="组合2"
                android:textColor="@color/White" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ofFloat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="0-1 输出 ofFloat"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/ofInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/selector_button"
                android:text="0-100 输出 ofInt"
                android:textColor="@color/White" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="ObjectAnimator 测试"
                android:textColor="@color/White" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_tab_pressed"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/outTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=" "
                android:textColor="@color/White" />


        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=" "
                android:textColor="@color/White" />


        </ScrollView>
    </LinearLayout>

</LinearLayout>
